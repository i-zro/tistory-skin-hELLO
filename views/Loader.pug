#loader(
  x-show='loading'
  x-transition:enter='transition ease-out duration-300'
  x-transition:enter-start='opacity-0'
  x-transition:enter-end='opacity-100'
  x-transition:leave='transition ease-in duration-300'
  x-transition:leave-start='opacity-100'
  x-transition:leave-end='opacity-0'
  class='w-screen h-screen fixed top-0 left-0 z-50 flex items-center justify-center bg-h-900 dark:bg-b-200')
  div(class='rounded-full w-14 h-14 my-14 mx-auto text-base relative border-2 border-solid border-h-700 dark:border-b-700 border-l-h-500 dark:border-l-b-900 animate-loading')
