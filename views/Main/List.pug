style
  :postcss
    [data-mode=list] {
      .list {
        @apply flex flex-col gap-y-0 sm:gap-y-0 rounded-[12px] bg-b-350/60 p-8;
      }

      .post {
        @apply flex flex-col gap-y-4 py-8 sm:flex-row-reverse sm:items-center sm:justify-end sm:gap-x-6 border-t border-b-400;

        .thumbnail {
          img {
            @apply w-full sm:w-48 sm:h-48 max-w-none rounded-[8px];
          }
        }

        .description {
          @apply gap-y-2 sm:grow;

          h2 {
            @apply text-xl lg:text-2xl font-bold;
          }

          p {
            @apply mt-3 max-h-20;

            &::after {
              @apply top-[calc(theme(spacing.14)+theme(spacing.1))];
            }
          }
        }
      }

      .post:first-of-type {
        @apply border-t-b-transparent pt-0;
      }

      .post:last-of-type {
        @apply pb-0;
      }
    }

style
  :postcss
    [data-mode=grid] {
      .list {
        @apply grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 lg:gap-12;
      }

      .post {
        @apply flex flex-col gap-y-4;

        .thumbnail {
          img {
            @apply w-full h-64;
          }
        }

        .description {
          .category {
            @apply hidden;
          }

          h2 {
            @apply text-xl font-bold;
          }

          time {
            @apply hidden;
          }

          p {
            @apply mt-2 max-h-14;

            &::after {
              @apply top-7;
            }
          }
        }
      }
    }

style
  :postcss
    [data-mode=zigzag] {
      .list {
        @apply flex flex-col gap-y-24 lg:gap-y-28;
      }

      .post {
        @apply relative flex flex-col gap-y-4 lg:flex-row;

        &:last-child::before {
          @apply hidden;
        }

        &::before {
          @apply content-[''] top-[calc(100%+theme(spacing.6))] left-[calc(100%/2)] lg:top-[calc(100%+theme(spacing.6))] lg:left-[calc(theme('screens.lg')/2)] absolute w-0.5 h-12 lg:h-16 bg-b-400;
        }

        .thumbnail {
          img {
            @apply relative z-10 object-cover w-full lg:w-[calc(theme(spacing.96)+theme(spacing.20)+theme(spacing.3))] lg:h-[calc(theme(spacing.72)+theme(spacing.7))] lg:max-w-none;
          }
        }

        .description {
          @apply bg-b-350/60 gap-y-2 p-10 lg:p-16;

          h2 {
            @apply text-xl lg:text-2xl font-bold;
          }

          p {
            @apply mt-3 max-h-20;

            &::after {
              @apply top-[calc(theme(spacing.14)+theme(spacing.1))];
            }
          }
        }

        &:nth-child(2n+1) {
          img {
            @apply lg:-translate-y-6 lg:translate-x-6;
          }
        }

        &:nth-child(2n) {
          @apply lg:flex-row-reverse;

          img {
            @apply lg:-translate-y-6 lg:-translate-x-6;
          }
        }
      }
    }
