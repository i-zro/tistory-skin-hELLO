s_tag_label
  #tags(class='mt-2 flex flex-wrap gap-x-1.5 text-[0]')
    | [##_tag_label_rep_##]

style(once='tags')
  :postcss
    #tags {
      a {
        @apply text-sm text-sm rounded-full py-2 px-4 mt-2 bg-h-700/60 dark:bg-b-350 text-h-400 dark:text-b-900;

        &:hover {
          @apply bg-h-yellow dark:bg-b-purple text-h-200 dark:text-b-900;
        }

        &:first-of-type::before {
          @apply mr-2 fa-tag;
        }
      }
    }
