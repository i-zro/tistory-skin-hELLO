template(x-if='$data.headings.length > 0')
  #TOC(
    class='rounded-[12px] p-8 mb-8 box-border bg-h-700/60 dark:bg-b-350/60 text-h-200 dark:text-b-900')
    strong(class='flex items-center justify-between text-overflow-hidden text-sm pb-2 mb-4 border-b border-solid border-b-400')
      span(class='text-base') 목차
      i(class='fas fa-bars')
    ol(class='flex flex-col gap-y-3')
      template(x-for='heading in $data.headings' :key='heading.id')
        li(:class='{ "pl-0": heading.tagName === "H2", "pl-4": heading.tagName === "H3" }')
          a(
            :href='heading.href'
            class='flex items-center justify-between text-sm duration-200 text-h-300/80 hover:text-h-100 dark:text-b-900/80 hover:dark:text-b-white')
            div(
              x-text='heading.text'
              class='text-overflow-hidden')
            i(class='fas fa-arrow-right scale-75')
