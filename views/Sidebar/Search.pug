.sidebar-element
  s_search
    div(class='flex items-center gap-x-3 border-box px-4 py-2 rounded-full border bg-h-750 dark:bg-transparent border-transparent dark:border-b-400 text-h-200 dark:text-b-900')
      label(for='search')
        span(class='text-hidden') 검색
        i(class='text-base fa-solid fa-magnifying-glass')
      input#search(
        type='text'
        name='[##_search_name_##]'
        value='[##_search_text_##]'
        onkeypress='if (event.keyCode == 13) { [##_search_onclick_submit_##] }'
        class='text-sm text-overflow-hidden border-none outline-none bg-b-transparent')
