.sidebar-element
  div(class='pt-6 border-t border-b-400')
    h2(class='px-3') 최근 글
    ul(class='flex flex-col gap-y-2')
      s_rctps_rep
        li
          a(href='[##_rctps_rep_link_##]' class='flex justify-between text-b-900 text-sm px-3 py-2 rounded-[8px] hover:bg-b-purple group')
            div(class='text-overflow-hidden')
              div(class='text-ellipsis overflow-hidden') [##_rctps_rep_title_##]
              div(class='w-content relative mt-1 text-xs text-b-700 group-hover:text-b-900') [##_rctps_rep_simple_date_##]
            s_rctps_rep_thumbnail
              img.lazyload(
                class='w-16 h-11 object-cover ml-3 rounded-[4px]'
                data-src='[##_rctps_rep_thumbnail_##]'
                data-sizes='auto'
                alt=''
                width='64'
                height='44')
